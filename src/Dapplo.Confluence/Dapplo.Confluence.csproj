<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>A library for accessing Atlassians Confluence from .NET</Description>
    <TargetFrameworks>netstandard1.3;netstandard2.0;net471;netcoreapp3.1;net6.0</TargetFrameworks>
    <PackageTags>atlassian;confluence;dapplo</PackageTags>
  </PropertyGroup>
  <ItemGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Dapplo.HttpExtensions" Version="1.1.2" />
    <PackageReference Include="Dapplo.HttpExtensions.JsonNet" Version="1.1.2" />
  </ItemGroup>
</Project>